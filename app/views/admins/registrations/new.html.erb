<div class="container">
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6" style="text-align: center">
            <h2>Admin Sign up</h2>

            <br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                    <%= f.label :姓 %>
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

                    <%= f.label :名 %>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>

                <div class="field">
                    <%= f.label :セイ %>
                    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>

                    <%= f.label :メイ %>
                    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kane" %>
                </div>
                <br>


                <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
                <br>

                <div class="actions">
                    <%= f.submit "Sign up" %>
                </div>
            <% end %>

            <%= render "admins/shared/links" %>
       </div>

       <div class="col-md-3"></div>
    </div>
</div>
