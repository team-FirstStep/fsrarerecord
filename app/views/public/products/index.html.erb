<h1>Products#index</h1>

<p>アーティスト名</p>
<p>商品名</p>
<p>値段</p>
<p>在庫ステータス</p>

    </body>
</html>
<body>
<div class="container">
    <div class="row">
    	<h1>main</h1>
    	<div class="col-md-12">
    		<div class="row">
    			<% @products.each do |products| %>
	    			<div class="col-md-4" style="margin-bottom:30px">
			    		<table>
			    			<thead>
			    				<tr>
			    					<%= attachment_image_tag products, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			    					<td>アーティスト名</td>
			    					<td>
			    					<%= products.artists %>
			    					</td>
			    				</tr>

			    				<tr>
			    					<td>シングル/アルバム名</td>
			    					<td>
			    					<%= products.cd_title %>
			    					</td>
			    				</tr>

			    				<tr>
			    					<td>値段</td>
			    					<td>
			    						<%= products.price %>
			    					</td>
			    				</tr>

			    				<tr>
			    					<td>在庫ステータス</td>
			    					<td>
			    						<%= products.status %>
			    					</td>
			    				</tr>
			    			</thead>
			    		</table>
			    	</div>
			    	<p><%= form_for(@product, url: root_path) do |f| %>
				<%= fields_for :discs do |disc| %>
				<%= disc.number_field :value, :size => "10*10" %>
				<% end %>
				<% end %>枚</p>
			    <% end %>
			    
			</div>
	</div>
</div>



</body>

