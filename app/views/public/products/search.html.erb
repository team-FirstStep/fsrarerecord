<h2>検索結果</h2>

<% @products.each do |product| %>



<table>
    <tbody>
	    <tr>
	    	<%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size: "150x150" %>
		    <td>商品名</td>
		    <td><%= product.cd_title %></td>
	    </tr>
	    <tr>
	    	<td>アーティスト名</td>
	    	<td><%= product.artists %></td>
	    </tr>
	    <tr>
	    	<td>ジャンル</td>
	    	<td><%= product.genre %></td>
	    </tr>
	</tbody>
</table>


<label>値段</label>
<%= product.price %>

<%= product.status %>

<% end %>
