<h2 style="margin-left:30px">検索結果</h2>
<br></br>
<div class="container" >
	<% @products.each do |product| %>
		<div class="row" style="margin-bottom:30px">
			<div class="row">
				<div class="col-xs-3">
					<%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %>
				</div>

			<div class="col-xs-5" style="margin-top:40px">
				<table>
				    <tbody>
					    <tr>
						    <td><h4><商品名></h4></td>
						    <td><h4><%= product.cd_title %></h4></td>
					    </tr>
					    <tr>
					    	<td><h4><アーティスト名></h4></td>
					    	<td><h4><%= product.artists %></h4></td>
					    </tr>
					    <tr>
					    	<td><h4><ジャンル></h4></td>
					    	<td><h4><%= product.genre %></h4></td>
					    </tr>
					</tbody>
				</table>
			</div>
			<div class="col-xs-4">
				<label style="margin-left:50px"><h2>値段 ;</h2></label>
				<span style="font-size: 30px"><%= product.price %></span>
				<span>円</span>
				<p style="margin-top:70px">在庫ステータス </p>
				<%= product.status %>
			</div>
		</div>
	</div>
	<% end %>
</div>
