<div class="container">
	<div class="row">
		<h2>ユーザー情報</h2>

		<div class="col-md-6">
			<p><%= @user.last_name %> <%= @user.first_name %></p>
			<p><%= @user.last_name_kana %> <%= @user.first_name_kana %></p>
			<%= link_to "編集", edit_user_path(@user), class: 'btn btn-default' %>

			<%= link_to "配送先一覧", user_addresses_path(@user), class: 'btn btn-default' %>
			<%= link_to "配送先を追加する", new_user_address_path(@user.id), class: "btn btn-default" %>
		</div>

		<div class="col-md-6">
			<h3>登録住所</h3>
			<label>電話番号 </label>
			<%= @user.phone %><br>
			<label>e-mail </label>
			<%= @user.email %><br>
			<label>〒 </label>
			<%= @user.zip %><br>
			<label>住所</label>
			<%= @user.address %>
		</div>
	</div>
	<div class="row">
		<h2>購入履歴</h2>
	</div>
</div>