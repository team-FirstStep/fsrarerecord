<div class="container">
    <h2 class="form-header-title">登録者情報編集</h2>
    <div class="row">
        <div class="col-md-3">
            <%= form_for(@user) do |f| %>
              <div class="form-group">
                  <label>プロフィール画像変更</label>
                  <br>
                  <%= f.file_field :profile_image, :class=>"form-control" %>
              </div>
        </div>

        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(姓)</label><br>
                        <%= f.text_field :last_name %>
                        <label>名前(セイ)</label><br>
                        <%= f.text_field :last_name_kana %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= f.text_field :first_name %>
                        <label>名前(メイ)</label><br>
                        <%= f.text_field :first_name_kana %>
                    </div>
                </div>
            </div>
            <div class="form-group">
                  <label>email</label><br>
                  <%= f.email_field :email %>
            </div>
            <div class="profile-address">
                <%= f.fields_for :addresses do |address| %>
                    <div class="form-group">
                        <label>電話番号</label><br>
                        <%= address.text_field :phone %>
                    </div>
                    <div class="form-group">
                        <label>郵便番号</label><br>
                        <%= address.text_field :zip %>
                    </div>
                    <div class="form-group">
                        <label>住所</label><br>
                        <%= address.text_field :address %>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="col-md-4">
            <h4>配送先の追加・編集</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(姓)</label><br>
                        <%= f.text_field :last_name %>
                        <label>名前(セイ)</label><br>
                        <%= f.text_field :last_name_kana %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= f.text_field :first_name %>
                        <label>名前(メイ)</label><br>
                        <%= f.text_field :first_name_kana %>
                    </div>
                </div>
            </div>
            <%= f.fields_for :addresses do |address| %>
            <div class="form-group">
                <label>郵便番号</label><br>
                <%= address.text_field :zip %>
            </div>
            <div class="form-group">
                <label>住所</label><br>
                <%= address.text_field :address %>
            <% end %>
            </div>

            <table class="pagination">
                <th>
                    <p>1</p>
                    <p>2</p>
                    <p>3</p>
                </th>
            </table>
        </div>
    </div>
    <%= f.submit "保存", class: "btn btn-default" %>
    <br>
    <%= link_to "戻る", user_path(current_user), class: "btn btn-default" %>
    <% end %>
</div>