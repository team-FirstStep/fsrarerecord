<div class="container">
    <h2 class="form-header-title">ユーザー情報編集</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>プロフィール画像変更</label>
                <br>
                <%= form_for(@user) do |f| %>
                <%= f.file_field :profile_image, :class=>"form-control" %>
            </div>
        </div>

        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(姓)</label><br>
                        <%= f.text_field :last_name %>
                        <label>名前(セイ)</label><br>
                        <%= f.text_field :last_name_kana %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= f.text_field :first_name %>
                        <label>名前(メイ)</label><br>
                        <%= f.text_field :first_name_kana %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                  <label>email</label><br>
                  <%= f.email_field :email %>
            </div>
            <div class="profile-address">
                <%= f.fields_for :addresses do |address| %>
                <div class="form-group">
                    <label>電話番号</label><br>
                    <%= address.text_field :phone %>
                </div>
                <div class="form-group">
                    <label>郵便番号</label><br>
                    <%= address.text_field :zip %>
                </div>
                <div class="form-group">
                    <label>住所</label><br>
                    <%= address.text_field :address %>
                </div>
                <% end %>
            </div>
            <%= f.submit "変更を保存する", class: "btn btn-default" %>
            <% end %>
            <%= link_to "戻る", user_path(current_user), class: "btn btn-default" %>

        </div>

        <div class="col-md-4">
            <h4>配送先の追加</h4>
            <%= form_for @add_address, :url => { :controller => :users, :action => :create } do |add| %>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(姓)</label><br>
                        <%= add.text_field :add_last_name %>
                        <label>名前(セイ)</label><br>
                        <%= add.text_field :add_last_name_kana %>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= add.text_field :add_first_name %>
                        <label>名前(メイ)</label><br>
                        <%= add.text_field :add_first_name_kana %>
                    </div>
                </div>
            </div>
            <%#= f.fields_for :addresses do |address| %>
            <div class="form-group">
                <label>郵便番号</label><br>
                <%= add.text_field :add_zip %>
            </div>
            <div class="form-group">
                <label>住所</label><br>
                <%= add.text_field :add_address %>
            <%# end %>
            </div>
            <%= add.submit "配送先を追加する", class: "btn btn-default" %>
            <br>
            <% end %>

            <h4>追加配送先の編集</h4>
            <%= form_for (@edit_address), :url => { :controller => :users, :action => :update } do |f| %>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(姓)</label><br>
                        <%= f.text_field :add_last_name %>
                        <label>名前(セイ)</label>
                        <%= f.text_field :add_last_name_kana %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= f.text_field :add_first_name %>
                        <label>名前(メイ)</label><br>
                        <%= f.text_field :add_first_name_kana %>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>郵便番号</label><br>
                <%= f.text_field :add_zip %>
            </div>
            <div class="form-group">
                <label>住所</label><br>
                <%= f.text_field :add_address %>
            </div>
            <%= f.submit "変更を保存する", class: "btn btn-default" %>
            <% end %>
            <table class="pagination">
                <th>
                    <p>1</p>
                    <p>2</p>
                    <p>3</p>
                </th>
            </table>
        </div>
    </div>
</div>