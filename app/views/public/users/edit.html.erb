<div class="container">
    <div class="row">
    <h2>ユーザー情報編集</h2>
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <%= form_for(@user) do |f| %>
                        <label>名前(姓)</label><br>
                        <%= f.text_field :last_name %>
                        <br>
                        <label>名前(セイ)</label><br>
                        <%= f.text_field :last_name_kana %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>名前(名)</label><br>
                        <%= f.text_field :first_name %>
                        <br>
                        <label>名前(メイ)</label><br>
                        <%= f.text_field :first_name_kana %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                  <label>email</label><br>
                  <%= f.email_field :email %>
            </div>
            <div class="profile-address">
                <%#= fields_for @address do |address| %>
                <div class="form-group">
                    <label>電話番号</label><br>
                    <%= f.text_field :phone %>
                </div>
                <div class="form-group">
                    <label>郵便番号</label><br>
                    <%= f.text_field :zip %>
                </div>
                <div class="form-group">
                    <label>住所</label><br>
                    <%= f.text_field :address %>
                </div>
                <%# end %>
            </div>
            <%= f.submit "変更を保存する", class: "btn btn-primary" %>
            <% end %>
            <%= link_to "戻る", user_path(current_user), class: "btn btn-warning" %>
        </div>
    </div>
</div>