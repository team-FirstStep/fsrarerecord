<div class="container">
    <div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-4" style="text-align: center">
            <h2>Sign up</h2>
            <br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                    <%= f.label :姓 %>
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                </div>

                <div class="field">
                    <%= f.label :名 %>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>

                <div class="field">
                    <%= f.label :セイ %>
                    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                </div>

                <div class="field">
                    <%= f.label :メイ %>
                    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                </div>


                <%= f.fields_for :address do |al| %><%# 子レコードへの入力 %>

                    <%= al.label :郵便番号 %>
                    <%= al.text_field :zip, autofocus: true %></br>

                    <%= al.label :住所 %>
                    <%= al.text_field :address, autofocus: true %></br>

                    <%= al.label :電話番号 %>
                    <%= al.text_field :phone, autofocus: true %>
                <% end %>


                <div class="field">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>

                <div class="actions">
                    <%= f.submit "Sign up" %>
                </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>

        <div class="col-md-4"></div>
    </div>
</div>
